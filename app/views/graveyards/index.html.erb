

<h2 class="text-center"> Deadbnb </h2>
<h1 class="text-center"> You just can't wait to die !</h1>
<%= link_to 'your profile is here', profiles_path %>

<div class="row graveyards">
  <% @graveyards.each do |graveyard| %>
    <div class="col-xs-12 col-md-4">

      <div class="card card-image-graveyard" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= graveyard.picture_graveyard%>');"> </div>
        <div class="card-description-graveyard">
          <p><%= graveyard.city %></p>
          <p><%= "#{graveyard.nb_places} places available" %></p>
        </div>
        <a class="btn-beetle" href= <%= link_to "Deadbook", graveyard_tombs_path(graveyard)%>> </a>
      </div>

    </div>
  <% end  %>

</div>
