<h2>See the available tomb in <%= @graveyard.city %></h2>

<% @tombs.each do |tomb| %>
<div class="card">
  <div class="card-description">
  <h2><%= tomb.name_tomb %></h2>
  <% if tomb.picture_tomb %>
  <%= cl_image_tag tomb.picture_tomb.path width: 200, height: 200 %>
  <% end %>
  <%= link_to 'DeadBook!', new_tomb_booking_path(tomb)  %>
  </div>
</div>
<% end %>


