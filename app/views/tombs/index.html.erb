<h2>See the available tomb in <%= @graveyard.city %></h2>

<div class="row">
  <% @tombs.each do |tomb| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card-tomb">
          <div class="card-description-tomb-picture">
            <% if tomb.picture_tomb? %>
            <%= cl_image_tag tomb.picture_tomb.path, width: 50, height: 50, crop: :fill %>
            <% else %>
            <%= "No available images ha ha ha ha !!!" %>
            <% end %>
          </div>
        <div class="card-description-tomb">
          <p><%= tomb.name_tomb %></p>
          <p><%= tomb.price %></p>
          <p><%= tomb.description %></p>
          <%= link_to 'DeadBook!', new_tomb_booking_path(tomb), class: "btn-beetle"%>
        </div>
      </div>
    </div>
  <% end %>
</div>


